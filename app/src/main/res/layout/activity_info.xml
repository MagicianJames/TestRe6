<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".InfoActivity">

    <TextView
            android:id="@+id/License"
            android:layout_width="96dp"
            android:layout_height="78dp"
            android:layout_marginStart="48dp"
            android:layout_marginTop="16dp"
            android:text="กก 1111"
            android:textSize="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venueMega" />

    <TextView
            android:id="@+id/license2"
            android:layout_width="96dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:text="ขข 2222"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/License"
            app:layout_constraintTop_toTopOf="@+id/License" />

    <TextView
            android:id="@+id/Destination"
            android:layout_width="200dp"
            android:layout_height="88dp"
            android:layout_marginStart="92dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:gravity="center"
            android:text="Mega"
            android:textSize="40dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />

    <TextView
            android:id="@+id/venueAbac"
            android:layout_width="323dp"
            android:layout_height="74dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Abac's Venue"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Destination" />

    <TextView
            android:id="@+id/venueMega"
            android:layout_width="323dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Mega Venue"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/venueAbac" />

    <TextView
            android:id="@+id/Phone"
            android:layout_width="323dp"
            android:layout_height="78dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:text="Phone"
            android:textSize="25dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/License" />

    <Button
            android:id="@+id/btCallRetrofit"
            android:layout_width="159dp"
            android:layout_height="70dp"
            android:layout_marginStart="125dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="129dp"
            android:text="Click Me!"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.481"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/Phone" />

</android.support.constraint.ConstraintLayout>